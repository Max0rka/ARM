                            <ListView Grid.Row="1" x:Name="ListViewServiceTypes" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Style="{StaticResource MaterialDesignListView}"
                          ItemContainerStyle="{StaticResource ListViewItem}" Margin="10">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <StackPanel>
                                                <TextBlock Text="{Binding ServiceTypeName}" HorizontalAlignment="Center"/>
                                                <CheckBox x:Name="CheckBoxDepartService" Content="Выезд" IsChecked="{Binding DepartureChecked}" Style="{StaticResource MaterialDesignCheckBox}"
                                                  Checked="CheckBoxDepartService_Checked"/>
                                                <materialDesign:TimePicker SelectedTime="{Binding TimeDeparture,Mode=TwoWay}" Is24Hours="True">
                                                    <materialDesign:TimePicker.Resources>
                                                        <Style TargetType="materialDesign:TimePicker">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=CheckBoxDepartService, Path=IsChecked}" Value="True">
                                                                    <Setter Property="IsEnabled" Value="True"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </materialDesign:TimePicker.Resources>
                                                </materialDesign:TimePicker>
                                                <CheckBox x:Name="CheckBoxArrivalService" Content="Прибытие" IsChecked="{Binding ArrivalChecked}" 
                                                  Checked="CheckBoxArrivalService_Checked" Unchecked="CheckBoxArrivalService_Unchecked">
                                                    <CheckBox.Resources>
                                                        <Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=CheckBoxDepartService, Path=IsChecked}" Value="True">
                                                                    <Setter Property="IsEnabled" Value="True"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </CheckBox.Resources>
                                                </CheckBox>
                                                <materialDesign:TimePicker SelectedTime="{Binding TimeArrival,Mode=TwoWay}" Is24Hours="True">
                                                    <materialDesign:TimePicker.Resources>
                                                        <Style TargetType="materialDesign:TimePicker">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=CheckBoxArrivalService, Path=IsChecked}" Value="True">
                                                                    <Setter Property="IsEnabled" Value="True"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </materialDesign:TimePicker.Resources>
                                                </materialDesign:TimePicker>
                                                <TextBlock Text="Личный состав" HorizontalAlignment="Left"/>
                                                <TextBox Width="40" Text="{Binding PeopleCount}" x:Name="TbPeopleCount" Padding="5" Margin="5" MaxLength="2" HorizontalAlignment="Left"
                                     materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" PreviewTextInput="TbPeopleCount_PreviewTextInput" TextChanged="TbPeopleCount_TextChanged">
                                                    <TextBox.Resources>
                                                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=CheckBoxArrivalService, Path=IsChecked}" Value="True">
                                                                    <Setter Property="IsEnabled" Value="True"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBox.Resources>
                                                </TextBox>
                                                <TextBlock Text="Техника" HorizontalAlignment="Left"/>
                                                <TextBox Width="40" Text="{Binding TechnicCount}" x:Name="TbTechnicCount" Padding="5" Margin="5" MaxLength="2" HorizontalAlignment="Left"
                                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" PreviewTextInput="TbTechnicCount_PreviewTextInput" TextChanged="TbTechnicCount_TextChanged">
                                                    <TextBox.Resources>
                                                        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=CheckBoxArrivalService, Path=IsChecked}" Value="True">
                                                                    <Setter Property="IsEnabled" Value="True"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBox.Resources>
                                                </TextBox>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </materialDesign:ColorZone>
                </WrapPanel>
                <materialDesign:ColorZone Background="MediumPurple" Padding="1" Margin="0,3,0,0">
                    <TextBlock Text="Подраздел 2.3. Учет прибытия должностных лиц" HorizontalAlignment="Center" Foreground="White" FontSize="15"/>
                </materialDesign:ColorZone>
                <WrapPanel HorizontalAlignment="Center" Margin="5">
                    <materialDesign:ColorZone x:Name="ColorZonePositionType" Visibility="Collapsed" BorderBrush="Black" BorderThickness="1" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ListView Grid.Row="1" x:Name="ListViewPositionTypes" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Style="{StaticResource MaterialDesignListView}"
                          ItemContainerStyle="{StaticResource ListViewItem}" Margin="10">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <StackPanel>
                                                <TextBlock Text="{Binding PositionTypeName}" HorizontalAlignment="Center"/>
                                                
                                                <CheckBox x:Name="CheckBoxArrivalPosition" Content="Прибыл" IsChecked="{Binding ArrivalChecked}" 
                                                  Checked="CheckBoxArrivalPosition_Checked" Unchecked="CheckBoxArrivalPosition_Unchecked">
                                                </CheckBox>
                                                <materialDesign:TimePicker SelectedTime="{Binding TimeArrival,Mode=TwoWay}" Is24Hours="True">
                                                    <materialDesign:TimePicker.Resources>
                                                        <Style TargetType="materialDesign:TimePicker">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=CheckBoxArrivalPosition, Path=IsChecked}" Value="True">
                                                                    <Setter Property="IsEnabled" Value="True"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </materialDesign:TimePicker.Resources>
                                                </materialDesign:TimePicker>
                                                
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </materialDesign:ColorZone>
                </WrapPanel>
                <materialDesign:ColorZone Background="MediumPurple" Padding="1" Margin="0,3,0,0">
                    <TextBlock Text="Подраздел 2.4. Количество задействованных сил и общая информация" HorizontalAlignment="Center" Foreground="White" FontSize="15"/>
                </materialDesign:ColorZone>
                <materialDesign:ColorZone BorderBrush="Black" x:Name="ColorZoneGeneralInfo" Visibility="Collapsed" BorderThickness="2" Padding="5" Margin="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.6*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel >
                            <TextBlock Text="Итого привлечено техники (ед.)" HorizontalAlignment="Left" FontWeight="Bold"/>
                            <ListView x:Name="ListViewDepTechnics" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Style="{StaticResource MaterialDesignListView}"
                          ItemContainerStyle="{StaticResource ListViewItemTechnic}" Margin="10">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel HorizontalAlignment="Left"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding TechnicName}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                <TextBox Width="40" Text="{Binding TechnicCountGeneral,Mode=TwoWay}" x:Name="TbTechnicCount" Padding="5" Margin="5,0" MaxLength="3" HorizontalAlignment="Left" IsReadOnly="True"
                                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TbPeopleCount_PreviewTextInput">
                                                </TextBox>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text="Подано стволов (ед.)" FontWeight="Bold"/>
                                <TextBox Width="60" Text="{Binding BarrelCount, Mode=TwoWay}" x:Name="TbCountSteam" Padding="5" Margin="5,0" MaxLength="6" HorizontalAlignment="Left" IsReadOnly="True"
                                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TbPeopleCount_PreviewTextInput">
                                </TextBox>
                                <TextBlock Text="Площадь пожара (м2)" FontWeight="Bold"/>
                                <TextBox Width="100" Text="{Binding FireAreaCount,Mode=TwoWay}" x:Name="TbSquareFire" Padding="5" Margin="5,0" MaxLength="10" HorizontalAlignment="Left" IsReadOnly="True"
                                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TbPeopleCount_PreviewTextInput">
                                </TextBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <CheckBox Name="CheckBoxFireEnd" Content="Локализация пожара" Width="260" IsChecked="{Binding IsFireContainment}" Checked="CheckBoxFireEnd_Checked"/>
                                <DatePicker Name="DatePickerFireEnd" Width="100" SelectedDate="{Binding DateTimeFireContainment, Mode=TwoWay}">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Margin" Value="5,0"/>
                                            <Setter Property="Padding" Value="5"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=CheckBoxFireEnd, Path=IsChecked}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                                <materialDesign:TimePicker Width="80" x:Name="TimePickerFireEnd" SelectedTime="{Binding DateTimeFireContainment,Mode=TwoWay}" Is24Hours="True">
                                    <materialDesign:TimePicker.Resources>
                                        <Style TargetType="materialDesign:TimePicker" BasedOn="{StaticResource MaterialDesignOutlinedTimePicker}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Padding" Value="5"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=CheckBoxFireEnd, Path=IsChecked}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:TimePicker.Resources>
                                </materialDesign:TimePicker>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5">
                                <CheckBox Name="CheckBoxOpenFire" Content="Локализация открытого горения" Width="260" IsChecked="{Binding IsOpenBurning}" Checked="CheckBoxOpenFire_Checked"/>
                                <DatePicker Width="100" x:Name="DatePickerOpenFire" SelectedDate="{Binding DateTimeOpenBurn, Mode=TwoWay}">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Margin" Value="5,0"/>
                                            <Setter Property="Padding" Value="5"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=CheckBoxOpenFire, Path=IsChecked}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                                <materialDesign:TimePicker Width="80" x:Name="TimePickerOpenFire" SelectedTime="{Binding DateTimeOpenBurn,Mode=TwoWay}" Is24Hours="True">
                                    <materialDesign:TimePicker.Resources>
                                        <Style TargetType="materialDesign:TimePicker" BasedOn="{StaticResource MaterialDesignOutlinedTimePicker}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Padding" Value="5"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=CheckBoxOpenFire, Path=IsChecked}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:TimePicker.Resources>
                                </materialDesign:TimePicker>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <CheckBox Name="CheckBoxAftermathFire" Content="Ликвидация последствия пожара" Width="260" IsChecked="{Binding IsAftermathFire}" Checked="CheckBoxAftermathFire_Checked"/>
                                <DatePicker Width="100" x:Name="DatePickerAftermathFire" SelectedDate="{Binding DateTimeAftermath,Mode=TwoWay}">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Margin" Value="5,0"/>
                                            <Setter Property="Padding" Value="5"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=CheckBoxAftermathFire, Path=IsChecked}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                                <materialDesign:TimePicker Width="80" x:Name="TimePickerAftermathFire" SelectedTime="{Binding DateTimeAftermath,Mode=TwoWay}" Is24Hours="True">
                                    <materialDesign:TimePicker.Resources>
                                        <Style TargetType="materialDesign:TimePicker" BasedOn="{StaticResource MaterialDesignOutlinedTimePicker}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Padding" Value="5"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=CheckBoxAftermathFire, Path=IsChecked}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:TimePicker.Resources>
                                </materialDesign:TimePicker>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Всего привлекалось"/>
                                <TextBox Width="60" Text="" x:Name="TbGeneralCountPeople" Padding="5" Margin="5,0" MaxLength="6" HorizontalAlignment="Left" IsReadOnly="True"
                                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TbPeopleCount_PreviewTextInput">
                                </TextBox>
                                <TextBlock Text="человек"/>
                                <TextBox Width="60" Text="" x:Name="TbGeneralCountTechnic" Padding="5" Margin="5,0" MaxLength="10" HorizontalAlignment="Left" IsReadOnly="True"
                                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TbPeopleCount_PreviewTextInput">
                                </TextBox>
                                <TextBlock Text="ед. техники"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="В том числе от МЧС "/>
                                <TextBox Width="60" Text="" x:Name="TbMCSCountPeople" Padding="5" Margin="5,0" MaxLength="6" HorizontalAlignment="Left" IsReadOnly="True"
                                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TbPeopleCount_PreviewTextInput">
                                </TextBox>
                                <TextBlock Text="человек"/>
                                <TextBox Width="60" Text="" x:Name="TbMCSCountTechnic" Padding="5" Margin="5,0" MaxLength="10" HorizontalAlignment="Left" IsReadOnly="True"
                                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" Style="{StaticResource MaterialDesignOutlinedTextBox}" PreviewTextInput="TbPeopleCount_PreviewTextInput">
                                </TextBox>
                                <TextBlock Text="ед. техники"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </materialDesign:ColorZone>
                <materialDesign:ColorZone Background="MediumPurple" Padding="1" Margin="0,3,0,0">
                    <TextBlock Text="Информация с места пожара, аварии или ЧС" HorizontalAlignment="Center" Foreground="White" FontSize="15"/>
                </materialDesign:ColorZone>
                <Button x:Name="BtnAddFireInfo" Visibility="Collapsed" Content="{materialDesign:PackIcon Kind=Add}" HorizontalAlignment="Right" Margin="10" Click="BtnAddFireInfo_Click" ToolTip="Добавить"/>
                <DataGrid x:Name="DataGridFireInfo" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Время поступления информации" Binding="{Binding DateTimeEntry, StringFormat={}{0:HH.mm}}" Width="0.5*" ElementStyle="{StaticResource textWrap}"/>
                        <DataGridTextColumn Header="Кто передал" Binding="{Binding Broadcast.BroadcastName}" Width="0.8*" ElementStyle="{StaticResource textWrap2}"/>
                        <DataGridTextColumn Header="Информация с места" Binding="{Binding InfoPlace}" Width="2*" ElementStyle="{StaticResource textWrap2}"/>
                        <DataGridTextColumn Header="Разновидность работ" Binding="{Binding WorkVariety}" Width="*" ElementStyle="{StaticResource textWrap2}"/>
                        <DataGridTextColumn Header="Приданные силы" Binding="{Binding ListSubdivisions}" Width="*" ElementStyle="{StaticResource textWrap}"/>
                        <DataGridTextColumn Header="Задача" Binding="{Binding MissionType.MissionTypeName}" Width="*" ElementStyle="{StaticResource textWrap2}"/>
                        <DataGridTextColumn Header="Участок работы" Binding="{Binding WorkArea.WorkAreaName}" Width="0.7*" ElementStyle="{StaticResource textWrap2}"/>
                        <DataGridTextColumn Header="Тип стволов" Binding="{Binding BarrelType.BarrelTypeName}" Width="0.6*" ElementStyle="{StaticResource textWrap2}"/>
                        <DataGridTextColumn Header="Кол-во стволов" Binding="{Binding BarrelCount}" Width="0.4*" ElementStyle="{StaticResource textWrap2}"/>
                        <DataGridTextColumn Header="Боевой участок" Binding="{Binding CombatArea.CombatAreaName}" Width="0.5*" ElementStyle="{StaticResource textWrap2}"/>
                        <DataGridTextColumn Header="Доп. инф-ция" Binding="{Binding AddInfo}" Width="*" ElementStyle="{StaticResource textWrap2}"/>
                        <DataGridTemplateColumn Width="auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="BtnEdit" Content="{materialDesign:PackIcon Kind=Edit}"  ToolTip="Редактировать" Click="BtnEdit_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="BtnDell" Content="{materialDesign:PackIcon Kind=Delete}" ToolTip="Удалить" Click="BtnDell_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontSize="11" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>
                
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
