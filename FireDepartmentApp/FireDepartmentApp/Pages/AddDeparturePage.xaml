<Page x:Class="FireDepartmentApp.Pages.AddDeparturePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:FireDepartmentApp.Pages" xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="1700" d:DesignWidth="1200" IsVisibleChanged="Page_IsVisibleChanged"
      Title="" Background="White">

    <Page.Resources>
       
    </Page.Resources>
    <ScrollViewer >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel>
                <materialDesign:ColorZone Background="MediumPurple" Padding="1">
                    <TextBlock Text="Раздел 1. Общая информация" HorizontalAlignment="Center" Foreground="White" FontSize="15"/>
                </materialDesign:ColorZone>
                <materialDesign:ColorZone Background="WhiteSmoke" Padding="1">
                    <TextBlock Text="Первичная информация" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black" FontSize="15"/>
                </materialDesign:ColorZone>
                <WrapPanel HorizontalAlignment="Center">
                    <materialDesign:ColorZone x:Name="ColorZoneDateTime" Style="{StaticResource ColorZone}" IsEnabled="False">
                        <StackPanel>
                            <TextBlock Text="Дата и время получения извещения(информации)"/>
                            <DatePicker x:Name="DateDepart" Width="140" FontSize="14" Margin="5" materialDesign:DatePickerAssist.OutlinedBorderActiveThickness="2" Padding="5"
                                        materialDesign:DatePickerAssist.OutlinedBorderInactiveThickness="2" Style="{StaticResource MaterialDesignOutlinedDatePicker}" 
                                            SelectedDate="{Binding DateTimeDepart, Mode=TwoWay}" MaxHeight="36"/>
                            <materialDesign:TimePicker x:Name="TimeDepart" Width="140" FontSize="14" materialDesign:TimePickerAssist.OutlinedBorderActiveThickness="2" 
                                                       materialDesign:TimePickerAssist.OutlinedBorderInactiveThickness="2" Is24Hours="True" Padding="5" MaxHeight="36"
                                                       Style="{StaticResource MaterialDesignOutlinedTimePicker}" SelectedTime="{Binding DateTimeDepart,Mode=TwoWay}"/>
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <materialDesign:ColorZone Style="{StaticResource ColorZone}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Населенный пункт"/>
                            <ComboBox x:Name="ComboBoxSettlement" Margin="5" Padding="5" Style="{StaticResource MaterialDesignOutlinedComboBox}" MaxHeight="36"
                                          DisplayMemberPath="SettlementName" SelectedItem="{Binding Settlement}" SelectionChanged="ComboBoxSettlement_SelectionChanged"/>
                            <ComboBox x:Name="ComboBoxDepArea" Margin="5" Padding="5" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                          DisplayMemberPath="DepartureAreaName" IsEnabled="False" SelectedItem="{Binding DepartureArea}" MaxHeight="36" SelectionChanged="ComboBoxDepArea_SelectionChanged"/>
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <materialDesign:ColorZone Style="{StaticResource ColorZone}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Улица"/>
                            <ComboBox x:Name="ComboBoxStreet" Margin="5" Padding="5" Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                          DisplayMemberPath="StreetName" SelectedItem="{Binding Street}" MaxHeight="36"/>
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <materialDesign:ColorZone Style="{StaticResource ColorZone}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Дом"/>
                            <TextBox FontSize="14" Padding="5" Margin="5" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding NumHouse}" />
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <materialDesign:ColorZone Style="{StaticResource ColorZone}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Корпус"/>
                            <TextBox FontSize="14" Padding="5" Margin="5" Style="{StaticResource MaterialDesignOutlinedTextBox}"  Text="{Binding NumCorp}"/>
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <materialDesign:ColorZone Style="{StaticResource ColorZone}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Квартира"/>
                            <TextBox FontSize="14" Padding="5" Margin="5" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding NumAppart}"/>
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <materialDesign:ColorZone Style="{StaticResource ColorZone}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Ориентиры"/>
                            <TextBox FontSize="14" Padding="5" Margin="5" Height="100" Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Text="{Binding Landmark}"/>
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <materialDesign:ColorZone Style="{StaticResource ColorZone}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Номер телефона заявителя"/>
                            <TextBox FontSize="14" Padding="5" Margin="5" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding ApplicantPhone}"/>
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <materialDesign:ColorZone Style="{StaticResource ColorZone}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Что горит"/>
                            <xceed:CheckComboBox Grid.Row="1" x:Name="ComboBoxBurns" Margin="5" BorderThickness="2" Delimiter="," DisplayMemberPath="BurnTypeName"
                                 MaxWidth="300" Width="180" MaxHeight="36" Height="36" FontSize="14" Padding="5" ToolTip="{Binding ElementName=ComboBoxBurns, Path=Text}"
                                 SelectedMemberPath="BurnSelected">

                            </xceed:CheckComboBox>
                            <!--<ComboBox x:Name="ComboBoxBurns" Margin="5" Padding="5" Style="{StaticResource MaterialDesignOutlinedComboBox}" MaxHeight="36"/>-->
                        </StackPanel>
                    </materialDesign:ColorZone>
                    <materialDesign:ColorZone Style="{StaticResource ColorZone}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Доп. информация"/>
                            <TextBox FontSize="14" Padding="5" Margin="5" Height="100" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding AdditionalInfo}"
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                        </StackPanel>
                    </materialDesign:ColorZone>
                </WrapPanel>
                <materialDesign:ColorZone Background="WhiteSmoke" Padding="1">
                    <Expander Padding="0" IsExpanded="True">
                        <Expander.Header>
                            <TextBlock Text="Уточненная информация" Margin="0" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black" FontSize="15"/>
                        </Expander.Header>
                        <StackPanel>
                            <WrapPanel HorizontalAlignment="Center">
                                <WrapPanel.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="Comic Sans MS"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Margin" Value="3"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </WrapPanel.Resources>
                                <materialDesign:ColorZone Style="{StaticResource ColorZoneAdditional}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel >
                                            <TextBlock Text="Что вы видите по внешним признакам?" Margin="10"/>
                                            <RadioButton x:Name="RButtonSign1" Margin="10,1" GroupName="Signs" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonSign_Checked">
                                                <TextBlock Text="Слабое выделение дыма"/>
                                            </RadioButton>
                                            <RadioButton  x:Name="RButtonSign2" Margin="10,1" GroupName="Signs" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonSign_Checked">
                                                <TextBlock Text="Сильное выделение дыма"/>
                                            </RadioButton>
                                            <RadioButton x:Name="RButtonSign3" Margin="10,1" GroupName="Signs" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonSign_Checked">
                                                <TextBlock Text="Вырывающиеся языки пламени"/>
                                            </RadioButton>

                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="Доп. информация"/>
                                            <TextBox x:Name="TbAdditionalInfoSign" Text="{Binding ExternalSignAddInfo}" FontSize="14" Padding="5" Margin="5" Height="70" Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:ColorZone>
                                <materialDesign:ColorZone Style="{StaticResource ColorZoneAdditional}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel >
                                            <TextBlock Text="Угроза людям, просят ли о помощи?" Margin="10"/>
                                            <CheckBox x:Name="ThreatPeople" Style="{StaticResource MaterialDesignCheckBox}" Margin="10,1" Checked="ThreatPeople_Checked" Unchecked="ThreatPeople_Unchecked">
                                                <TextBlock Text="Имеется угроза людям"/>
                                            </CheckBox>
                                            <TextBox FontSize="14" Padding="5" Margin="5" Text="{Binding ThreatPeopleCount}">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=ThreatPeople, Path=IsChecked}" Value="True">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="Доп. информация"/>
                                            <TextBox x:Name="TbAdditionalInfoThreatPeople" Text="{Binding ThreatPeopleAddInfo}" FontSize="14" Padding="5" Margin="5" Height="70" Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:ColorZone>
                                <materialDesign:ColorZone Style="{StaticResource ColorZoneAdditional}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel >
                                            <TextBlock Text="Имеются ли пострадавшие?" Margin="10"/>
                                            <RadioButton x:Name="YesAffected" Margin="10,1" GroupName="IsAffected" Style="{StaticResource MaterialDesignRadioButton}" Checked="YesAffected_Checked">
                                                <TextBlock Text="Да, в количестве"/>
                                            </RadioButton>
                                            <TextBox FontSize="14" Padding="5" Margin="5" Text="{Binding AffectedCount}">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=YesAffected, Path=IsChecked}" Value="True">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                            <RadioButton x:Name="NoAffected" Margin="10,1" GroupName="IsAffected"  Style="{StaticResource MaterialDesignRadioButton}" Checked="YesAffected_Checked">
                                                <TextBlock Text="Пострадавших нет"/>
                                            </RadioButton>
                                            <RadioButton x:Name="UnknownAffected" Margin="10,1" GroupName="IsAffected" Style="{StaticResource MaterialDesignRadioButton}" Checked="YesAffected_Checked">
                                                <TextBlock Text="Не знаю"/>
                                            </RadioButton>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="Доп. информация"/>
                                            <TextBox x:Name="TbAdditionalInfoAffect" Text="{Binding AffectedAddInfo}" FontSize="14" Padding="5" Margin="5" Height="70" Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:ColorZone>
                                <materialDesign:ColorZone>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel >
                                            <TextBlock Text="Что с ними?" Margin="10"/>
                                            <CheckBox x:Name="StatePeople1" Style="{StaticResource MaterialDesignCheckBox}" Margin="10,1" Checked="StatePeople_Checked" Unchecked="StatePeople_Unchecked">
                                                <TextBlock Text="Без сознания"/>
                                            </CheckBox>
                                            <CheckBox x:Name="StatePeople2" Style="{StaticResource MaterialDesignCheckBox}" Margin="10,1"  Checked="StatePeople_Checked" Unchecked="StatePeople_Unchecked">
                                                <TextBlock Text="Получили ожоги"/>
                                            </CheckBox>
                                            <CheckBox x:Name="StatePeople3" Style="{StaticResource MaterialDesignCheckBox}" Margin="10,1" Checked="StatePeople_Checked" Unchecked="StatePeople_Unchecked">
                                                <TextBlock Text="Не знаю"/>
                                            </CheckBox>

                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="Доп. информация"/>
                                            <TextBox x:Name="AdditionalInfoStatePeople" Text="{Binding StatePeopleAddInfo}" FontSize="14" Padding="5" Margin="5" Height="70" Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                        </StackPanel>
                                    </Grid>
                                    <materialDesign:ColorZone.Resources>
                                        <Style TargetType="materialDesign:ColorZone" BasedOn="{StaticResource ColorZoneAdditional}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=YesAffected, Path=IsChecked}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:ColorZone.Resources>
                                </materialDesign:ColorZone>
                                <materialDesign:ColorZone>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel >
                                            <TextBlock Text="Где находятся?" Margin="10"/>
                                            <CheckBox x:Name="CheckBoxLocation1" Style="{StaticResource MaterialDesignCheckBox}" Margin="10,1" Checked="CheckBoxLocation_Checked" Unchecked="CheckBoxLocation_Unchecked">
                                                <TextBlock Text="Самостоятельно эвакуируются"/>
                                            </CheckBox>
                                            <CheckBox x:Name="CheckBoxLocation2" Style="{StaticResource MaterialDesignCheckBox}" Margin="10,1" Checked="CheckBoxLocation_Checked" Unchecked="CheckBoxLocation_Unchecked">
                                                <TextBlock Text="В зоне воздействия"/>
                                            </CheckBox>

                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="Доп. информация"/>
                                            <TextBox x:Name="TbAdditionalInfoLocation" Text="{Binding PeopleLocationAddInfo}" FontSize="14" Padding="5" Margin="5" Height="70" Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                        </StackPanel>
                                    </Grid>
                                    <materialDesign:ColorZone.Resources>
                                        <Style TargetType="materialDesign:ColorZone" BasedOn="{StaticResource ColorZoneAdditional}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=YesAffected, Path=IsChecked}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:ColorZone.Resources>
                                </materialDesign:ColorZone>

                                <materialDesign:ColorZone Style="{StaticResource ColorZoneAdditional}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel >
                                            <TextBlock Text="Имеется ли угроза распространения?" Margin="10"/>
                                            <RadioButton Name="ThreatFire1" Margin="10,1" GroupName="Threat"  Style="{StaticResource MaterialDesignRadioButton}" Checked="ThreatFire_Checked">
                                                <TextBlock Text="Имеется"/>
                                            </RadioButton>
                                            <RadioButton Name="ThreatFire2" Margin="10,1" GroupName="Threat" Style="{StaticResource MaterialDesignRadioButton}" Checked="ThreatFire_Checked">
                                                <TextBlock Text="Имеется на этажи"/>
                                            </RadioButton>
                                            <RadioButton Name="ThreatFire3" Margin="10,1" GroupName="Threat" Style="{StaticResource MaterialDesignRadioButton}" Checked="ThreatFire_Checked">
                                                <TextBlock Text="Имеется на соседние объекты"/>
                                            </RadioButton>
                                            <RadioButton Name="ThreatFire4" Margin="10,1" GroupName="Threat" Style="{StaticResource MaterialDesignRadioButton}" Checked="ThreatFire_Checked">
                                                <TextBlock Text="Не знаю"/>
                                            </RadioButton>

                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="Доп. информация"/>
                                            <TextBox x:Name="TbAdditionalInfoThreat" Text="{Binding ThreatFireAddInfo}" FontSize="14" Padding="5" Margin="5" Height="70" Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:ColorZone>
                                <materialDesign:ColorZone Style="{StaticResource ColorZoneAdditional}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel >
                                            <TextBlock Text="Какие значимые объекты имеются рядом?" Margin="10"/>
                                            <CheckBox x:Name="CheckBoxObject1" Style="{StaticResource MaterialDesignCheckBox}" Margin="10,1" Checked="CheckBoxObject_Checked" Unchecked="CheckBoxObject_Unchecked">
                                                <TextBlock Text="Социально - значимые"/>
                                            </CheckBox>
                                            <CheckBox x:Name="CheckBoxObject2" Style="{StaticResource MaterialDesignCheckBox}" Margin="10,1" Checked="CheckBoxObject_Checked" Unchecked="CheckBoxObject_Unchecked">
                                                <TextBlock Text="С массовым пребыванием"/>
                                            </CheckBox>
                                            <CheckBox x:Name="CheckBoxObject3" Style="{StaticResource MaterialDesignCheckBox}" Margin="10,1" Checked="CheckBoxObject_Checked" Unchecked="CheckBoxObject_Unchecked">
                                                <TextBlock Text="Производственные"/>
                                            </CheckBox>
                                            <CheckBox x:Name="CheckBoxObject4" Style="{StaticResource MaterialDesignCheckBox}" Margin="10,1" Checked="CheckBoxObject_Checked" Unchecked="CheckBoxObject_Unchecked">
                                                <TextBlock Text="Социально - значимых объектов рядом нет"/>
                                            </CheckBox>
                                            <CheckBox x:Name="CheckBoxObject5" Style="{StaticResource MaterialDesignCheckBox}" Margin="10,1" Checked="CheckBoxObject_Checked" Unchecked="CheckBoxObject_Unchecked">
                                                <TextBlock Text="Рядом объектов нет"/>
                                            </CheckBox>

                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="Доп. информация"/>
                                            <TextBox x:Name="TbAdditionalInfoObject" Text="{Binding NearbyObjectAddInfo}" FontSize="14" Padding="5" Margin="5" Height="70" Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:ColorZone>
                                <materialDesign:ColorZone Style="{StaticResource ColorZoneAdditional}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel >
                                            <TextBlock Text="Местонахождение заявителя?" Margin="10"/>
                                            <RadioButton x:Name="RButtonPlace1" Margin="10,1" GroupName="Place" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonPlace_Checked">
                                                <TextBlock Text="На объекте"/>
                                            </RadioButton>
                                            <RadioButton x:Name="RButtonPlace2" Margin="10,1" GroupName="Place" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonPlace_Checked">
                                                <TextBlock Text="Рядом с объектом"/>
                                            </RadioButton>
                                            <RadioButton x:Name="RButtonPlace3" Margin="10,1" GroupName="Place" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonPlace_Checked">
                                                <TextBlock Text="Внутри здания"/>
                                            </RadioButton>

                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="Доп. информация"/>
                                            <TextBox x:Name="TbAdditionalInfoPlace" Text="{Binding PlaceAddInfo}" FontSize="14" Padding="5" Margin="5" Height="70" Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:ColorZone>
                                <materialDesign:ColorZone Style="{StaticResource ColorZoneAdditional}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel >
                                            <TextBlock Text="Есть ли перекрытые проезды?" Margin="10"/>
                                            <RadioButton x:Name="RButtonBarrier1" Margin="10,1" GroupName="Barrier" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonBarrier_Checked">
                                                <TextBlock Text="Есть"/>
                                            </RadioButton>
                                            <RadioButton x:Name="RButtonBarrier2" Margin="10,1" GroupName="Barrier" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonBarrier_Checked">
                                                <TextBlock Text="Припаркованные ТС"/>
                                            </RadioButton>
                                            <RadioButton x:Name="RButtonBarrier3" Margin="10,1" GroupName="Barrier" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonBarrier_Checked">
                                                <TextBlock Text="Котлованы"/>
                                            </RadioButton>
                                            <RadioButton x:Name="RButtonBarrier4" Margin="10,1" GroupName="Barrier" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonBarrier_Checked">
                                                <TextBlock Text="Шлагбаум"/>
                                            </RadioButton>
                                            <RadioButton x:Name="RButtonBarrier5" Margin="10,1" GroupName="Barrier" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonBarrier_Checked">
                                                <TextBlock Text="Искусственные заграждения"/>
                                            </RadioButton>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="Доп. информация"/>
                                            <TextBox x:Name="TbAdditionalInfoBarrier" Text="{Binding BarrierAddInfo}" FontSize="14" Padding="5" Margin="5" Height="70" Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:ColorZone>
                                <materialDesign:ColorZone Style="{StaticResource ColorZoneAdditional}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel >
                                            <TextBlock Text="Возможность встречи пожарных подразделений?" Margin="10"/>
                                            <RadioButton x:Name="RButtonMCS1" Margin="10,1" GroupName="Meet" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonMCS_Checked">
                                                <TextBlock Text="Имеется"/>
                                            </RadioButton>
                                            <RadioButton x:Name="RButtonMCS2" Margin="10,1" GroupName="Meet" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonMCS_Checked">
                                                <TextBlock Text="Нет"/>
                                            </RadioButton>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="Доп. информация"/>
                                            <TextBox x:Name="TbAdditionalInfoMeet" Text="{Binding MeetMCSAddInfo}" FontSize="14" Padding="5" Margin="5" Height="70" Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:ColorZone>
                                <materialDesign:ColorZone Style="{StaticResource ColorZoneAdditional}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="auto"/>
                                        </Grid.RowDefinitions>
                                        <StackPanel >
                                            <TextBlock Text="Ваше отношение к объекту пожара?" Margin="10"/>
                                            <RadioButton x:Name="RButtonWhy1" Margin="10,1" GroupName="Why" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonWhy_Checked">
                                                <TextBlock Text="Собственник"/>
                                            </RadioButton>
                                            <RadioButton x:Name="RButtonWhy2" Margin="10,1" GroupName="Why" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonWhy_Checked">
                                                <TextBlock Text="Сосед"/>
                                            </RadioButton>
                                            <RadioButton x:Name="RButtonWhy3" Margin="10,1" GroupName="Why" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonWhy_Checked">
                                                <TextBlock Text="Арендатор"/>
                                            </RadioButton>
                                            <RadioButton x:Name="RButtonWhy4" Margin="10,1" GroupName="Why" Style="{StaticResource MaterialDesignRadioButton}" Checked="RButtonWhy_Checked">
                                                <TextBlock Text="Очевидец"/>
                                            </RadioButton>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1">
                                            <TextBlock Text="Доп. информация"/>
                                            <TextBox x:Name="TbAdditionalInfoWhy" Text="{Binding WhyApplicantAddInfo}" FontSize="14" Padding="5" Margin="5" Height="70" Style="{StaticResource MaterialDesignOutlinedTextBox}"  
                                     TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:ColorZone>
